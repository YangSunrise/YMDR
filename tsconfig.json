{
  "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "strict": true,
      "jsx": "preserve",
      "importHelpers": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "baseUrl": ".",
      "types": [
          "webpack-env"
      ],
      "resolveJsonModule": true,

      "lib": [
          "esnext",
          "dom",
          "dom.iterable",
          "scripthost"
      ]
  },

  "include": [
      "*.ts",
     
  ],
  "exclude": [
      "node_modules"
  ]
}